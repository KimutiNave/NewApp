<h1 class="ml-4 mb-5">お知らせ</h1>
<% if @notification_settings.exists? %>
  <div class="center">
    <%= link_to destroy_all_notification_settings_path, data: { turbo_confirm: "削除してもよろしいですか？", turbo_method: :delete },class:"btn btn-light" do %>
      <i class="fas fa-trash" style="color: black;"></i>全削除
    <% end %>
    <div data-turbo="false"> <%=link_to "前の画面に戻る", posts_path, class: "btn btn-primary" %></div>
  </div>
  <br>
  <%= render @notification_settings %>
<% else %>
  <div class="center"><%= "通知はありません"%></div>
<% end %>