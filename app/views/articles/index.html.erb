<h1>記事一覧</h1>

<h2>保存用の記事</h2>
<% if @posts.present? %>
  <% @posts.each do |post| %>
    <div>
      <p><%= post.save_type_name%></p>
      <p><%= post.title %></p>
      <p><%= post.file_name %></p>
      <p><%= post.other_file_name %></p>
      <p><%= post.code_content %></p>
      <p><%= post.other_content %></p>
      <p><%= post.created_at.strftime("%B %d, %Y %H:%M") %></p>
    </div>
  <% end %>
<% end %>

<h2>エラー用の記事</h2>
<% if @another_posts.present? %>
  <% @another_posts.each do |another_post| %>
    <div>
     <h3><%= another_post.title %></h3>
      <p><%= another_post.error_type_name %></p>
      <p><%= another_post.status_error_name %></p>
      <p><%= another_post.other_error_name %></p>
      <p><%= another_post.file_name %></p>
      <p><%= another_post.other_file_name %></p>
      <p><%= another_post.code_content %></p>
      <p><%= another_post.other_content %></p>
      <p><%= another_post.created_at.strftime("%B %d, %Y %H:%M") %></p>
    </div>
  <% end %>
<% end %>
<br>
<%= paginate @paginated_articles %>