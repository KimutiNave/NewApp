<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card border-dark mb-3" style="max-width: 50rem;">
      <div class="card-header"><h4><i class="fas fa-walking"></i>&emsp;Login</h4></div>
    <div class="card-body text-dark">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <h5 class="card-title"><%= f.label :name %></h5>
          <p class="card-text">
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </p>
          <h5 class="card-title"><%= f.label :email %></h5>
          <p class="card-text">
            <%= f.email_field :email%>
          </p>
          <h5 class="card-title"><%= f.label :password %></h5>
          <p class="card-text">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </p>
          <% if devise_mapping.rememberable? %>
            <p class="card-text">
              <%= f.check_box :remember_me %>
              <%=f.label :remember_me %>
            </p>
          <% end %>
        </div>

        <div class="form-actions">
          <p class="card-text"><%= f.submit "Login" %></p>
        </div>
      <% end %>

      <p class="card-text"><%= render "admins/shared/links" %></p>
    </div>
  </div>
