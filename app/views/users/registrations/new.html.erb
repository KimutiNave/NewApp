<div class="shinki-page">
  <%= render "homes/shared/navbar" %>
  <div class="row">
    <div class="center">
      <div class="card mt-2" style="min-width: 43rem; height: 91.5vh">
        <h2>新規登録</h2>
        <br>
        <div class="center">
          <%= image_tag 'server-chara.jpg', :size => '300x300' %>
        </div> 
        <div class="card-body">
          <!--%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %-->
          <%= form_with model: @user, url: user_registration_path(@user), local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: @user %>
            <div class="mb-3 mt-3">
              <%= f.label :name %><br />
              <%= f.text_field :name, required: true, placeholder: "名前" %>
            </div>
            <div class="mb-3">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
            </div>
            <div class="mb-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
              <% end %><br />
              <%= f.password_field :password, class: 'user_password', autocomplete: "new-password", placeholder: "パスワード" %>
              <input type="checkbox" class="toggle_password_checkbox"> 表示
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: 'user_password_confirmation', autocomplete: "new-password", size: "50x10", placeholder: "パスワード（確認用）" %>
              <input type="checkbox" class="toggle_password_confirmation"> 表示
            </div>
            <br />
            <div class="mb-3">
              <%= f.submit "新規登録", class: "btn btn-primary" %>
            </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
