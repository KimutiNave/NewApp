<div class="main-container">
  <div class="row">
    <div class="col-lg-3 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2">
      <div class="card">
        <div class="card-body">
          <h2>新規登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-3 mt-3">
              <%= f.label :name %><br />
              <%= f.text_field :name, required: true, style: "space-around" %>
            </div>
            <div class="mb-3">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="mb-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <br />
            <div class="mb-3">
              <%= f.submit "新規登録", class: "btn btn-primary" %>
            </div>
          <% end %>
          <br >
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

