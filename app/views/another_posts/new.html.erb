<%= form_with url: another_posts_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :error_type_name, 'エラー用' %><br>
    <%= f.text_field :error_type_name, value: 'エラー用', readonly: true %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :status_error_name, 'エラー名' %><br>
    <%= f.select :status_error_name, options_for_select(AnotherPost.status_error_names.keys.map { |k| [k.humanize, k] }) , include_blank: true %>
  </div>
  <br>
  <div class="form-group">
    <%= f.text_area :error_post_other_content, id: "error_post_other_content", tyle: "min-width: 250px", class: "hidden" %>
  <br>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title, required: true %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :file_name, 'ファイル名' %><br>
    <%= f.collection_select :file_name, FileType.all, :id, :file_name, include_blank: true, id: "file_select" %>
  </div>
  <br><br>
  <div class="form-group">
    <%= f.text_area :other_content, id: "post_other_content", style: "min-width: 250px", class: "hidden"  %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :code_content, 'コード内容' %><br>
    <%= f.text_area :code_content, style: "width:40%", rows: "30" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :other_content, 'その他' %><br>
    <%= f.text_area :other_content, style: "width:40%", rows: "10"  %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit 'メモを作成' %>
  </div>
<% end %>