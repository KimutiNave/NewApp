<head>
  <%= render 'shared/header' %>
</head>
<div class="font-arrange my-4">
  <h2 class="mb-4"><i class="fa-solid fa-wand-magic-sparkles"></i> エラー用の記事一覧 <i class="fas fa-dove"></i></h2>

  <div class="mb-3">
    <%= render 'another_posts/search_form', url: search_another_posts_path %>
  </div>

  <% if @another_posts.present? %>
    <div class="row g-4">
      <% @another_posts.each_with_index do |another_post, index| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">
            <!-- ヘッダー -->
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
              <div>
                <strong><%= another_post.error_type_name %></strong>
                <small class="d-block"><%= another_post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
              </div>
              <div class="text-end">
                <%= link_to edit_another_post_path(another_post), id: "button-edit-#{another_post.id}", class: "text-white me-2" do %>
                  <i class="fa-solid fa-pen-nib"></i>
                <% end %>
                <%= link_to another_post_path(another_post), id: "button-delete-#{another_post.id}", data: { turbo_confirm: "削除してもよろしいですか？", turbo_method: :delete }, class: "text-white" do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>

            <!-- 本文 -->
            <div class="card-body">
              <h5 class="card-title text-truncate" title="<%= another_post.title %>">
                <%= safe_join(another_post.title.split("\n"),tag(:br)) %>
              </h5>

              <!-- エラータグ -->
              <p>
                <% if another_post.status_error_name.present? %>
                  <span class="badge bg-danger"><%= another_post.status_error_name %></span>
                <% end %>
                <span class="badge bg-warning text-dark"><%= another_post.other_error_name %></span>
              </p>

              <!-- ファイルタグ -->
              <p>
                <% if another_post.file_type.present? %>
                  <span class="badge bg-info"><%= another_post.file_type.file_name %></span>
                <% end %>
                <span class="badge bg-secondary"><%= another_post.other_file_name %></span>
              </p>

              <!-- コード（折りたたみ＆スクロール） -->
              <button class="btn btn-outline-secondary btn-sm mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#code<%= index %>">
                コードを表示
              </button>
              <div class="collapse" id="code<%= index %>">
                <pre class="bg-dark text-light p-3 rounded overflow-auto" style="max-height: 400px; white-space: pre-wrap; word-wrap: break-word;">
                  <%= safe_join(another_post.code_content.split("\n"),tag(:br)) %>
                </pre>
              </div>

              <!-- メモ（折りたたみ＆スクロール） -->
              <button class="btn btn-outline-secondary btn-sm mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#note<%= index %>">
                メモを表示
              </button>
              <div class="collapse" id="note<%= index %>">
                <pre class="bg-light p-3 rounded overflow-auto" style="max-height: 300px; white-space: pre-wrap; word-wrap: break-word;">
                  <%= safe_join(another_post.other_content.split("\n"),tag(:br)) %>
                </pre>
              </div>

              <!-- 詳細リンク -->
              <div class="mt-3">
                <%= link_to "メモの詳細", another_post_path(another_post), class: "btn btn-primary btn-sm" %>
                <% if current_user.own?(another_post) %>
                  <%= render 'favorites/favorite_button', another_post: another_post, data: { turbo: false} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div data-turbo="false">
    <div class="text-center mt-4">
      <%= paginate @another_posts, theme: 'bootstrap-5'%>
    </div>
  </div>
</div>
