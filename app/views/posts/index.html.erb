<head>
  <%= render 'shared/header' %>
</head>
<div class="font-arrange my-4">
  <h2 class="mb-4"><i class="fa-solid fa-wand-magic-sparkles"></i>保存用の記事一覧<i class="fas fa-dove"></i></h2>

  <div class="mb-3">
    <%= render 'posts/search_form', url: search_posts_path %>
  </div>

  <% if @posts.present? %>
    <div class="row g-4">
      <% @posts.each_with_index do |post, index| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">
            <!-- ヘッダー -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
              <div>
                <strong><%= post.save_type_name %></strong>
                <small class="d-block"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
              </div>
              <div class="text-end">
                <%= link_to edit_post_path(post), id: "button-edit-#{post.id}", class: "text-white me-2" do %>
                  <i class="fa-solid fa-pen-nib"></i>
                <% end %>
                <%= link_to post_path(post), id: "button-delete-#{post.id}", data: { turbo_confirm: "削除してもよろしいですか？", turbo_method: :delete }, class: "text-white" do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>

            <!-- 本文 -->
            <div class="card-body">
              <h5 class="card-title text-truncate" title="<%= post.title %>">
                <%= safe_join(post.title.split("\n"),tag(:br)) %>
              </h5>

              <!-- ファイルタグ -->
              <p>
                <% if post.file_type.present? %>
                  <span class="badge bg-info"><%= post.file_type.file_name %></span>
                <% end %>
                <span class="badge bg-secondary"><%= safe_join(post.other_file_name.split("\n"),tag(:br)) %></span>
              </p>

              <!-- コード（折りたたみ＆スクロール） -->
              <button class="btn btn-outline-secondary btn-sm mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#code<%= index %>">
                コードを表示
              </button>
              <div class="collapse" id="code<%= index %>">
                <pre class="bg-dark text-light p-3 rounded overflow-auto" style="max-height: 400px; white-space: pre-wrap; word-wrap: break-word;">
                  <%= safe_join(post.code_content.split("\n"),tag(:br)) %>
                </pre>
              </div>

              <!-- メモ（折りたたみ＆スクロール） -->
              <button class="btn btn-outline-secondary btn-sm mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#note<%= index %>">
                メモを表示
              </button>
              <div class="collapse" id="note<%= index %>">
                <pre class="bg-light p-3 rounded overflow-auto" style="max-height: 300px; white-space: pre-wrap; word-wrap: break-word;">
                  <%= safe_join(post.other_content.split("\n"),tag(:br)) %>
                </pre>
              </div>

              <!-- 詳細リンク -->
              <div class="mt-3">
                <div data-turbo="false">
                  <%= link_to "メモの詳細", post_path(post), class: "btn btn-primary btn-sm" %>
                </div>
                <% if current_user.own?(post) %>
                  <%= render 'bookmarks/bookmark_button', post: post, data: { turbo: false} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div data-turbo="false">
    <div class="text-center mt-4">
      <%= paginate @posts, theme: 'bootstrap-5'%>
    </div>
  </div>
</div>
